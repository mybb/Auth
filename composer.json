{
  "name": "mybb/auth",
  "description": "The authentication system used by MyBB 2",
  "keywords": [
    "mybb",
    "forum",
    "laravel"
  ],
  "license": "BSD-3",
  "require": {
    "illuminate/support": "^5.0",
    "illuminate/auth": "^5.0",
    "illuminate/hashing": "^5.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.0",
    "phpspec/phpspec": "~2.1",
    "friendsofphp/php-cs-fixer": "~2.0@dev",
    "squizlabs/php_codesniffer": "~2.0@dev",
    "mockery/mockery": "0.9.*@dev"
  },
  "autoload": {
    "psr-4": {
      "MyBB\\Auth\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "vendor-dir": "vendor",
    "preferred-install": "dist"
  },
  "scripts": {
    "test-unit": "vendor/bin/phpunit --testsuite unit",
    "test-unit-coverage": "vendor/bin/phpunit --testsuite unit --coverage-text --coverage-html=./tests/report",
    "sniff": "vendor/bin/phpcs",
    "sniff-fix": "vendor/bin/phpcbf"
  }
}
